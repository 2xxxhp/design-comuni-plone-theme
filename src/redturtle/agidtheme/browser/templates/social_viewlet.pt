<div tal:define='results view/get_socials' class="Share">
    <tal:comment replace="nothing">
    <!-- Rendeder all viewlets inside this manager.
        Pull viewlets out of the manager and render then one-by-one
    -->
    </tal:comment>
    <div class="Share-reveal js-Share">
        <a href="#share-options" class="Share-revealText" data-menu-trigger="share-options">
            <span class="Share-revealIcon Icon Icon-share"></span>
            <span class="Share-title">Condividi</span>
        </a>
    </div>
    <ul id="share-options" class="Dropdown-menu" data-menu>
        <tal:results tal:repeat="social results">
        <li>
            <a tal:attributes="href python: view.get_sharer_url(social)" href="#" title="">
                <span tal:attributes="class social" class=""></span>
                <span tal:content="python: social.title()" class="u-hiddenVisually">Facebook</span>
            </a>
        </li>
        </tal:results>
    </ul>
</div>
