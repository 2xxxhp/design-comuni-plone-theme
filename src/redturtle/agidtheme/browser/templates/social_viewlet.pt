<div tal:define='results view/get_socials' class="share">
    <tal:comment replace="nothing">
    <!-- Rendeder all viewlets inside this manager.
        Pull viewlets out of the manager and render then one-by-one
    -->
    </tal:comment>

    <div class="share-slider">
        <div class="share-title">
            <a href="#" class="share-toggle">
                <span class="share-text">Condividi</span>
            </a>
        </div>
        <div class="share-options">
            <ul class="social-list">
                <tal:results tal:repeat="social results"
                ><li
                    ><a tal:attributes="href python: view.get_sharer_url(social)" href="#" title="" target="_blank"
                        ><span tal:attributes="class python: 'social ' + social" class=""></span
                        ><span tal:content="python: social.title()" class="u-hiddenVisually">Facebook</span
                    ></a
                ></li
            ></tal:results>
            </ul>
        </div>
    </div>
    <div class="share-button">
        <a href="#" class="share-toggle">
            <span class="share-icon"></span>
            <span class="sr-only">Attiva condividi</span>
        </a>
    </div>
</div>
