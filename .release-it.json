{
  "git": {
    "tagName": "v${version}",
    "commitMessage": "chore: release v${version}"
  },
  "npm": {
    "publish": false
  },
  "github": {
    "release": true,
    "releaseName": "${version}"
  },
  "hooks": {
    "before:init": ["yarn install-full", "yarn i18n"]
  },
  "plugins": {
    "@release-it/conventional-changelog": {
      "preset": "angular",
      "infile": "CHANGELOG.md"
    }
  }
}
